        </div>
         
        <!-- Forms that pop-up if click "Buy Now" if category drinks  -->

        <!--Form design and layout-->
        <div id="drink-popup" class="popup" style="display:none; position:fixed; top:0; left:0; width:100%; height:100%; background:rgba(0,0,0,0.6); justify-content:center; align-items:center; z-index:9999;">
            <div class="popup-content" style="background:white; padding:40px; height: 400px; border-radius:10px; width:600px; position:relative;">

                <!--"X" button design and layout-->
                <span class="close-popup" style="position:absolute; top:10px; right:15px; font-size:20px; cursor:pointer;">&times;</span>

                <!--Product name auto indicate depends on "data-product"-->
                <h2 id="drink-title">Drink Name</h2>
                
                <!--Order item details like size-->
                <p style="font-weight: bold; font-size: 20px; color: black; text-align: center">Item Details</p>
                <div class="input-group mb-3">
                    <input type="number" min="1" class="form-control" placeholder="Quantity" aria-label="Quantity">
                    <label class="input-group-text" for="inputGroupSelect01">Item Size</label>
                    <select class="form-select" id="inputGroupSelect01">
                        <option selected>Choose...</option>
                        <option value="1">Medium</option>
                        <option value="2">Large</option>
                    </select>
                </div>

                <!--Customer Info-->
                <p style="font-weight: bold; font-size: 20px; color: black; text-align: center">Customer Details</p>
                <div class="input-group mb-3">
                    <span class="input-group-text" id="basic-addon2">Name</span>
                    <input type="text" class="form-control" placeholder="Name" aria-label="Name">
                    <span class="input-group-text" id="basic-addon2">Contact No.</span>
                    <input type="text" class="form-control" placeholder="+63 000 000 0000" aria-label="+63 000">
                </div>
                <div class="input-group mb-3">
                <span class="input-group-text" id="basic-addon2">Address</span>
                <input type="text" class="form-control" placeholder="Address" aria-label="Address">
                </div>

                <!--Button "Place Order" redirect to Track Order-->
                <a asp-controller="Home" asp-action="TrackOrder" class="btm btn-dark" style="width:100%; border:none; padding:10px; 
                border-radius:5px; text-decoration: none; text-align: end">Place Order</a>
            </div>
        </div>

        <!-- Forms that pop-up if click "Buy Now" if category snacks  -->

        <!--Form design and layout-->
        <div id="snack-popup" class="popup" style="display:none; position:fixed; top:0; left:0; width:100%; height:100%; background:rgba(0,0,0,0.6); justify-content:center; align-items:center; z-index:9999;">
            <div class="popup-content" style="background:white; padding:20px; border-radius:10px; width:600px; height: 400px; position:relative;">

                <!--"X" button design and layout-->
                <span class="close-popup" style="position:absolute; top:10px; right:15px; font-size:20px; cursor:pointer;">&times;</span>

                <!--Product name auto indicate depends on "data-product"-->
                <h2 id="snack-title">Snack Name</h2>

                <!--Order item details-->
                <p style="font-weight: bold; font-size: 20px; color: black; text-align: center">Item Details</p>
                <div class="input-group mb-3">
                    <input type="number" min="1" class="form-control" placeholder="Quantity" aria-label="Quantity">
                </div>

                <!--Customer Info-->
                <p style="font-weight: bold; font-size: 20px; color: black; text-align: center">Customer Details</p>
                <div class="input-group mb-3">
                    <span class="input-group-text" id="basic-addon2">Name</span>
                    <input type="text" class="form-control" placeholder="Name" aria-label="Name">
                    <span class="input-group-text" id="basic-addon2">Contact No.</span>
                    <input type="text" class="form-control" placeholder="+63 000 000 0000" aria-label="+63 000">
                </div>
                <div class="input-group mb-3">
                    <span class="input-group-text" id="basic-addon2">Address</span>
                    <input type="text" class="form-control" placeholder="Address" aria-label="Address">
                </div>

                <!--Button "Place Order" redirect to Track Order-->
                <a asp-controller="Home" asp-action="TrackOrder" class="btm btn-dark" style="width:100%; border:none; padding:10px;
                border-radius:5px; text-decoration: none; text-align: end">Place Order</a>
            </div>
        </div>

        <!--Fuctions to pop-up the place order form-->
        <script>
           //Wait for the entire page load before running the code
            document.addEventListener("DOMContentLoaded", function () {

                //Select all buttons with class "buy-now"
                const buyNowButtons = document.querySelectorAll(".buy-now");

                // Add click event for each "Buy Now" button
                buyNowButtons.forEach(function (button) {
                    button.addEventListener("click", function (e) {

                        //Stop action like redirecting
                        e.preventDefault();

                        //Get the product name and category from button data attributes
                        const product = this.getAttribute("data-product");
                        const category = this.getAttribute("data-category");

                        //Condition if what pop-up shows (Drink or Snack)
                        //If the product is drink, show drink pop-up with it's drink-title which is the product name
                        if (category === "drink") {
                            document.getElementById("drink-title").textContent = product;
                            document.getElementById("drink-popup").style.display = "flex";

                        //Show Snack pop-up if the product is snack with it's snack-title which is the product name
                        } else if (category === "snack") {
                            document.getElementById("snack-title").textContent = product;
                            document.getElementById("snack-popup").style.display = "flex";
                        }
                    });
                });

                // Functions to close pop-up if click "X" button
                document.querySelectorAll(".close-popup").forEach(function (closeBtn) {
                    closeBtn.addEventListener("click", function () {

                        //Hide all elements with the class popup
                        document.querySelectorAll(".popup").forEach(function (popup) {
                            popup.style.display = "none";
                        });
                    });
                });
            });
        </script>
    </div>
</body>
